<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/dtx" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv1"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/iv1"
            android:text="心理咨询师"
            android:textColor="@color/zi"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv1"
            android:layout_alignLeft="@+id/tv1"
            android:text="发布于:2016年3月16日"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignLeft="@+id/tv2"
            android:layout_below="@+id/iv1"
            android:layout_marginTop="10dp"
            android:src="@drawable/lanq" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv2"
            android:text="状态:"
            android:textColor="@color/zi"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignLeft="@+id/iv2"
            android:layout_below="@+id/tv3"
            android:layout_marginTop="10dp"
            android:src="@drawable/juq" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv3"
            android:layout_below="@+id/tv3"
            android:layout_marginTop="5dp"
            android:text="信息审核已通过"
            android:textColor="@color/zi"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/iv1"
            android:layout_marginRight="15dp"
            android:text="已发布"
            android:textColor="#aaaaaa"
            android:textSize="16dp" />

        <Button
            android:id="@+id/bt_delete"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv4"
            android:layout_alignBottom="@+id/tv4"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_enter"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </RelativeLayout>

</LinearLayout>