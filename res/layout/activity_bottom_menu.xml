<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/main_line" >
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp" >

        <android.support.v4.widget.DrawerLayout
            android:id="@+id/drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/maincontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/vpager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >
                </android.support.v4.view.ViewPager>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/main_line" />

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:fillViewport="true"
                    android:scrollbars="none" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/scrollLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:id="@+id/ll_tj"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:paddingTop="2dp" >

                                <LinearLayout
                                    android:id="@+id/ll_tj_small"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical" >

                                    <ImageView
                                        android:id="@+id/iv_tj"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:padding="3dp"
                                        android:src="@drawable/tuijain" />

                                    <TextView
                                        android:id="@+id/tv_tj"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="推荐"
                                        android:textColor="#00ced1"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_jk"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:paddingTop="2dp" >

                                <LinearLayout
                                    android:id="@+id/ll_jk_small"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical" >

                                    <ImageView
                                        android:id="@+id/iv_jk"
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:padding="5dp"
                                        android:src="@drawable/jiankang" />

                                    <TextView
                                        android:id="@+id/tv_jk"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="健康"
                                        android:textColor="@color/black"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_sm"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:paddingTop="2dp" >

                                <LinearLayout
                                    android:id="@+id/ll_sm_small"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical" >

                                    <ImageView
                                        android:id="@+id/iv_sm"
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:padding="5dp"
                                        android:src="@drawable/shangmen" />

                                    <TextView
                                        android:id="@+id/tv_sm"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="上门"
                                        android:textColor="@color/black"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_sh"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:paddingTop="2dp" >

                                <LinearLayout
                                    android:id="@+id/ll_sh_small"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical" >

                                    <ImageView
                                        android:id="@+id/iv_sh"
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:padding="5dp"
                                        android:src="@drawable/shenghuo" />

                                    <TextView
                                        android:id="@+id/tv_sh"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="生活"
                                        android:textColor="@color/black"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_yq"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:paddingTop="2dp" >

                                <LinearLayout
                                    android:id="@+id/ll_yq_small"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical" >

                                    <ImageView
                                        android:id="@+id/iv_yq"
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:padding="5dp"
                                        android:src="@drawable/yiqi" />

                                    <TextView
                                        android:id="@+id/tv_yq"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="一起晒"
                                        android:textColor="@color/black"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_nq"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:paddingTop="2dp" >

                                <LinearLayout
                                    android:id="@+id/ll_nq_small"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical" >

                                    <ImageView
                                        android:id="@+id/iv_nq"
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:padding="5dp"
                                        android:src="@drawable/nianqing" />

                                    <TextView
                                        android:id="@+id/tv_nq"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="年轻派"
                                        android:textColor="@color/black"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </android.support.v4.widget.DrawerLayout>
    </RelativeLayout>

</LinearLayout>