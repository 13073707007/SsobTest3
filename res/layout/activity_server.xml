    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/hui" />

    <RelativeLayout
        android:id="@+id/layout_select_serverType"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/txt_notice_servertype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:text="服务类型"
            android:textColor="@color/zi"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txt_server_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/txt_subserver_name"
            android:text=""
            android:textColor="@color/zi"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_subserver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/img_jiantou"
            android:text=""
            android:textColor="@color/zi"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/img_jiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/jiantou" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/hui" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:text="标题"
            android:textColor="@color/zi"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/et_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_marginLeft="37dp"
            android:layout_toRightOf="@+id/textView2"
            android:background="@color/white"
            android:hint="简要说明你的服务内容" >
        </EditText>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/hui" />

    <ScrollView
        android:layout_width="match_parent"
