<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_bar_height"
        android:background="@color/lan"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_fanhuims"
            android:layout_width="@dimen/navigation_bar_iconsize"
            android:layout_height="@dimen/navigation_bar_iconsize"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="17dp"
            android:src="@drawable/fanhui_" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_fanhuims"
            android:layout_centerHorizontal="true"
            android:text="我的服务"
            android:textColor="@color/white"
            android:textSize="@dimen/navigation_bar_font_size" />

    </RelativeLayout>

    <ListView
        android:id="@+id/lvserve"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/grayLine"
        android:dividerHeight="1dp" >
    </ListView>

</LinearLayout>