<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_bar_height"
        android:background="@color/lan"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_fanhuii"
            android:layout_width="@dimen/navigation_bar_iconsize"
            android:layout_height="@dimen/navigation_bar_iconsize"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="17dp"
            android:src="@drawable/fanhui_" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_fanhuii"
            android:layout_centerHorizontal="true"
            android:text="意见反馈"
            android:textColor="@color/white"
            android:textSize="@dimen/navigation_bar_font_size" />

    </RelativeLayout>


        <EditText
            android:id="@+id/et_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/xian"
            android:enabled="true"
            android:gravity="top"
            android:hint="请详细描述您的问题和建议,我们将不断改进"
            android:maxLines="6"
            android:minLines="6"
            android:scrollbars="vertical" >

        </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/xian" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的联系方式:"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/et_feedback_phone"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/baitiao"
            android:hint="请输入邮箱/电话,以便我们给回复" >
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/bt_idea_send"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button_enter"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:text="发  送" />

</LinearLayout>